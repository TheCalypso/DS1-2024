<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONVERSION DE TEMPÉRATURE"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageButton
        android:id="@+id/imageButtonC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tc2"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonF"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>


    <ImageButton
        android:id="@+id/imageButtonF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tf2"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toEndOf="@+id/imageButtonC"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonK"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/imageButtonK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tk2"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toEndOf="@+id/imageButtonF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textViewunite0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°C"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/editTextvaleur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Entrez la valeur"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/textViewunite0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/buttonConver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conver."
        app:layout_constraintTop_toBottomOf="@+id/editTextvaleur"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/buttonRAZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAZ"
        app:layout_constraintTop_toBottomOf="@+id/buttonConver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewtemperature1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/buttonRAZ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/textViewunite1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°F"
        app:layout_constraintTop_toBottomOf="@+id/textViewtemperature1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/textViewtemperature2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/textViewunite1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/textViewunite2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="K"
        app:layout_constraintTop_toBottomOf="@+id/textViewtemperature2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
